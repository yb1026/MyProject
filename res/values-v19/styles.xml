<resources>

    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar"></style>

    
    <!-- 半透明，不是沉浸 -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item><!-- 适应系统窗口 -->
        <item name="android:windowNoTitle">true</item><!-- 隐藏导航 -->
        <item name="android:windowTranslucentNavigation">true</item><!-- 半透明导航栏 -->
        <item name="android:windowTranslucentStatus">true</item><!--半透明状态栏 -->
    </style>

</resources>