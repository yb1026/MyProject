<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.han.myproject"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 文件写入SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    
    <application
        android:name=".imageloader.UILApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        
          <!-- 广播注册 -->
        <receiver android:name="com.han.myproject.StartAppReceiver" >
            <intent-filter android:priority="99999" >
                <action android:name="com.han.myproject.start" />
            </intent-filter>
        </receiver>
        
        
        
        <!-- web -->
        <activity android:name=".web.MyWebViewActivity" >
        </activity>

        <!-- 自定义 视图 -->

        <activity android:name=".myView.MyViewActivity" >
        </activity>

        <!-- imageloader -->
        <activity android:name=".imageloader.HomeActivity" >
        </activity>
        <activity
            android:name=".imageloader.ImageListActivity"
            android:label="@string/ac_name_image_list" />
        <activity
            android:name=".imageloader.ImageGridActivity"
            android:label="@string/ac_name_image_grid" />
        <activity
            android:name=".imageloader.ImagePagerActivity"
            android:label="@string/ac_name_image_pager" />
        <activity
            android:name=".imageloader.ImageGalleryActivity"
            android:label="@string/ac_name_image_gallery" />
        <activity
            android:name=".clipimage.ClipImageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".clipimage.ShowImageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".clipimage.SystemClipActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Widget -->
        <receiver android:name="com.han.myproject.imageloader.widget.UILWidgetProvider" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>
    </application>
	
    
     
</manifest>